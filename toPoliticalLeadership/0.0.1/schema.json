{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {},
  "id": "http://example.com/example.json",
  "properties": {
    "data": {
      "type": "object",
      "properties": {
        "language": {
          "id": "/properties/language",
          "type": "string",
          "default": "hindi",
          "enum": [
              "english",
              "hindi"
          ],
          "enumNames": [
              "English",
              "Hindi"
          ],
          "title": "Language"
        },
        "district": {
          "title": "District",
          "type": "string"
        },
        "details": {
          "id": "/properties/data/properties/questions",
          "title": "Details",
          "items": {
            "id": "/properties/data/properties/questions/items",
            "title": "MP",
            "separator": "#",
            "hideTitle": true,
            "properties": {
              "name": {
                "type": "string",
                "title": "Name",
                "default":"Person"
              },
              "assembly": {
                "title": "Constituency",
                "id": "/properties/data/properties/questions/items/properties/question",
                "type": "string",
                "default":"Constituency"
              },
              "party": {
                "type": "string",
                "title": "Party",
                "enum":["बसपा", "भाजपा", "एसपी", "कांग्रेस", "आर एल डी", "आईएनडी", "अपना दल", "ए आई टी सी"],
                "default":"BSP"
              },
              "party_color":{
                "type":"string",
                "format":"color",
                "title":"Party Color"
              },
              "gender":{
                "type":"string",
                "title":"Gender",
                "enum":["Male","Female"],
                "default":"Male"
              }
            },
            "required": [
              "party",
              "name",
              "assembly"
            ],
            "minItems": 1,
            "addButtonText": "Add another MP",
            "type": "object"
          },
          "minItems": 1,
          "type": "array"
        }
      }
    }
  },
  "type": "object"
}
