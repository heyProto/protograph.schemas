{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {},
  "id": "http://example.com/example.json",
  "properties": {
    "data": {
      "type": "object",
      "title":"Rainfall Data",
      "properties": {
        "district": {
          "title": "District",
          "type": "string"
        },
        "years": {
          "id": "/properties/data/properties/questions",
          "title": "Years",
          "items": {
            "id": "/properties/data/properties/questions/items",
            "title": "Year",
            "separator": "#",
            "hideTitle": true,
            "properties": {
              "year": {
                "title": "Year",
                "id": "/properties/data/properties/questions/items/properties/question",
                "type": "string",
                "default": "1970"
              },
              "seasons": {
                "title": "Seasons",
                "id": "/properties/data/properties/questions/items/properties/options",
                "items": {
                  "id": "/properties/data/properties/questions/items/properties/options/items",
                  "title": "Season",
                  "separator": "#",
                  "hideTitle": true,
                  "minItems": 1,
                  "maxItems": 4,
                  "properties": {
                    "season": {
                      "id": "/properties/data/properties/questions/items/properties/options/items/properties/fact",
                      "type": "string",
                      "title": "Season",
                      "default": "Monsoon"
                    },
                    "rainfall": {
                      "title": "Rainfall",
                      "id": "/properties/data/properties/questions/items/properties/options/items/properties/option",
                      "default": 100,
                      "type": "number"
                    },
                    "dep_perc": {
                      "title": "Departure Percentage",
                      "id": "/properties/data/properties/questions/items/properties/options/items/properties/option",
                      "type": "number",
                      "default": 100
                    }
                  },
                  "addButtonText": "Add a season",
                  "type": "object"
                },
                "minItems": 1,
                "type": "array"
              },
              "annual": {
                "type": "number",
                "title": "Annual Average Rainfall",
                "default": 200
              },
              "annual_dep_perc": {
                "type": "number",
                "title": "Annual Average Percentage Departure",
                "default": 50
              },
              "annual_type": {
                "type": "string",
                "title": "Annual Rainfall Description",
                "default": "Average"
              }
            },
            "minItems": 1,
            "addButtonText": "Add a year",
            "type": "object"
          },
          "minItems": 1,
          "type": "array"
        }
      }
    }
  },
  "type": "object"
}